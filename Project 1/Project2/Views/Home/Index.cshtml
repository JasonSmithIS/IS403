@model IEnumerable<Project2.Models.Missions>
<!--This is where I store the page title to be displayed in the layout-->
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Mission FAQs</h1>
    <!--Here is the Call to Action-->
    <p class="lead">Choose your mission below to help get answers to your questions.</p>
    @foreach (var item in Model)
    {
        <div class="col-md-12">
            <a href="@Url.Action("Index", "Questions", new { id=item.MissionId})">@item.MissionName</a>
        </div>
    }
</div>
